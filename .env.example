# server
PORT=8000
HOST=0.0.0.0

# ADK / LLM (set to your provider keys)
GOOGLE_ADK_API_KEY=your_google_adk_api_key_here
GENAI_PROJECT_ID=your_genai_project_id_here
GENAI_LOCATION=us-central1

# Behavior flags
AUTO_TENTATIVE=true             # create tentative calendar holds automatically
TENTATIVE_TTL_HOURS=48          # hours until tentative hold expires
SESSION_RETENTION_DAYS=90

# ClickUp / HITL (demo values)
CLICKUP_API_KEY=demo_clickup_key
CLICKUP_SPACE_ID=your_space_id

# Calendar / Google service account (for real calendar integration)
GOOGLE_CALENDAR_CREDENTIALS=/path/to/google_calendar_credentials.json

# Storage config (switch to postgres or file)
MEMORY_BACKEND=inmemory          # options: inmemory | postgres | chroma | pinecone
SESSION_BACKEND=inmemory         # options: inmemory | postgres

# Postgres (if using postgres backend)
POSTGRES_URL=postgresql://user:pass@localhost:5432/dealmaker

# Vector DB (if using a vector DB)
VECTOR_DB_TYPE=chroma            # options: chroma | pinecone
CHROMA_DIR=./chroma_db

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
LOG_LEVEL=INFO

# Security / Misc
APP_ENV=development
